<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeScreen">

    <Button
        android:id="@+id/classic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Классические"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383" />

    <Button
        android:id="@+id/crazy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Чумовые"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/classic"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/magic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Волшебные"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/crazy"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/backChess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:backgroundTint="#2196F3"
        android:text="Назад"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/magic" />
</androidx.constraintlayout.widget.ConstraintLayout>