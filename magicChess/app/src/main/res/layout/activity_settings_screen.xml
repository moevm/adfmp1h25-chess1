<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsScreen">

    <!-- Поле ввода для имени игрока -->
    <EditText
        android:id="@+id/playerNameEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите имя"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/changeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Кнопка смены имени, теперь сверху -->
    <Button
        android:id="@+id/changeName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Смена имени"
        app:layout_constraintBottom_toTopOf="@id/button_mood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerNameEditText" />

    <Button
        android:id="@+id/button_mood"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:text="Тема"
        app:layout_constraintBottom_toTopOf="@+id/sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeName"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sound"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:text="Звук"
        app:layout_constraintBottom_toTopOf="@+id/backSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#2196F3"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
